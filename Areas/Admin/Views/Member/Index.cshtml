@using Dewi.Models
@model List<Member>

    <div class="container">
        <h1>Member Table</h1>
        <a asp-action="Create" class="btn btn-submit">Create</a>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#id</th>
                <th scope="col">Member name</th>
                <th scope="col">Member Position</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Position</td>
                <td style="width:150px">
                    <img src="~/upload/member/@item.ImgUrl" width="100%" />

                </td>
                <td> 
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn-primary">Update</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn-danger">Delete</a>
                </td>
              
            </tr>

            }
     
        </tbody>
    </table>
    </div>